<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_list_item_thumb"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/abc_ic_menu_share_mtrl_alpha"
        android:layout_marginRight="5dp"
        android:background="#000000"/>

    <Button
        android:id="@+id/btn_add_item"
        android:text="+"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"/>

    <Button
        android:id="@+id/btn_remove_item"
        android:text="-"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/btn_add_item"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginRight="4dp"/>
    
    <TextView
        android:id="@+id/tv_list_item_desc"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/btn_remove_item"
        android:layout_toRightOf="@id/iv_list_item_thumb"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Description"
        android:textSize="12sp"/>
    
    <TextView
        android:id="@+id/tv_list_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_list_item_desc"
        android:layout_toLeftOf="@id/btn_remove_item"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/iv_list_item_thumb"
        android:gravity="center_vertical"
        android:text="Title"
        android:textSize="16sp"/>
</RelativeLayout>